extends ../../layouts/default.pug
include ../../mixins/filterStatusButton.pug
include ../../mixins/searchForm.pug

block main
    h1 Trang danh sách sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
        .row.p-2 
            .col-6
                +filterStatus(filterStatus)
            .col-6 
                +search(keyword) 
                
    .card.mb-3 
        .card-header Danh sách sản phẩm 
        .card-body
            table.table.table-hover.table-sm 
                thead   
                    tr 
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Giá
                        th Trạng thái 
                        th Hành động 

                tbody 
                    each item,index in products
                        tr 
                            td #{index}
                            td 
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price}
                            td 
                                if (item.status==="active")
                                    a(href="#" class="badge text-bg-success") Hoạt động
                                else 
                                    a(href="#" class="badge text-bg-danger") Dừng Hoạt động
                            td 
                                button(class="btn btn-warning btn-sm") Sửa
                                button(class="btn btn-danger btn-sm") xóa

